@{
    ViewData["Title"] = "Student Login";
    Layout = null; // Standalone page
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>Student Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&family=Allura&display=swap" rel="stylesheet" />

    <!-- THEME / VENDOR CSS (now using /AWS/ paths) -->
    <link rel="stylesheet" href="/css/vendors.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="/AWS/css/bw-theme.css" />
    <link rel="stylesheet" href="/AWS/css/rtl-numbers-fix.css" />
    <link rel="stylesheet" href="/AWS/css/footer-center.css" />
    <link rel="stylesheet" href="/AWS/css/auth-rtl-fix.css" />
    <!-- Optional custom student login styles (move the file to /AWS/css/ if you want everything unified) -->
    <link rel="stylesheet" href="/AWS/css/StudentLogin.css" />

    <style>
        body {
            font-family: 'Cairo','Segoe UI',Tahoma,Arial,sans-serif;
        }

        .student-login-status {
            margin-top: 14px;
            display: none;
            font-size: 14px;
            padding: 10px 14px;
            border-radius: 8px;
            line-height: 1.4;
        }

            .student-login-status.error {
                display: block;
                background: #ffe5e5;
                color: #b40000;
                border: 1px solid #ffb3b3;
            }

            .student-login-status.success {
                display: block;
                background: #e6ffed;
                color: #096b36;
                border: 1px solid #b2f5c5;
            }

        #btnStudentLogin.button {
            position: relative;
        }

        #btnStudentLogin[disabled] {
            opacity: .75;
            cursor: not-allowed;
        }

        .loading-spinner {
            width: 18px;
            height: 18px;
            border: 3px solid rgba(255,255,255,0.5);
            border-top-color: #4b3b7f;
            border-radius: 50%;
            display: inline-block;
            animation: spin .8s linear infinite;
            vertical-align: middle;
            margin-inline-end: 6px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .password-container {
            position: relative;
        }

        #toggleStudentPwd {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            inset-inline-end: 10px;
            background: none;
            border: none;
            color: #6e59a4;
            font-weight: 600;
            cursor: pointer;
            padding: 4px 6px;
            font-size: 13px;
        }

            #toggleStudentPwd:hover {
                color: #4b3b7f;
            }

        .contact-form input.form-control,
        .contact-form input[type="text"],
        .contact-form input[type="password"] {
            width: 100%;
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 12px 14px;
            transition: .25s;
            background: #fff;
        }

        .contact-form input:focus {
            border-color: #6e59a4;
            box-shadow: 0 0 0 .2rem rgba(110,89,164,0.25);
            outline: none;
        }

        .brand-logo {
            font-family: 'Allura',cursive;
            font-size: 32px;
            text-decoration: none;
            color: #fff;
            display: inline-flex;
            align-items: center;
        }

        .brand-logo__sep {
            padding: 0 4px;
            font-weight: 300;
        }

        /* Provide fallback display utilities if vendor CSS not yet loaded */
        .d-none {
            display: none !important;
        }
        @@media (min-width:992px) {
            .d-lg-block

        {
            display: block !important;
        }

        }
    </style>
</head>
<body class="preloader-visible login-page" data-barba="wrapper">
    <!-- Preloader -->
    <div class="preloader js-preloader">
        <div class="preloader__bg"></div>
    </div>

    <main class="main-content bg-beige-1">
        <!-- Header -->
        <header class="header -type-4 -shadow bg-white border-bottom-light js-header" data-anim="fade" data-add-bg>
            <div class="header__container py-10">
                <div class="row justify-between items-center">
                    <div class="col-auto">
                        <div class="header-left d-flex items-center">
                            <a href="~/" class="brand-logo" aria-label="Home">
                                <span class="brand-logo__letter">A</span>
                                <span class="brand-logo__sep">|</span>
                                <span class="brand-logo__letter">F</span>
                            </a>
                            <div class="header-menu js-mobile-menu-toggle pl-30 xl:pl-20">
                                <div class="header-menu__content">
                                    <div class="mobile-bg js-mobile-bg"></div>

                                    <div class="menu js-navList">
                                        <ul class="menu__nav -is-active">
                                            <a data-barba href="~/">الرئيسية</a>
                                            <a data-barba href="~/About">حول الأستاذ</a>
                                            <a data-barba href="~/Courses">الدروس</a>
                                            <a data-barba href="~/Centers">المراكز</a>
                                            <a data-barba href="~/Students/Outstanding">الطلاب المتميزون</a>
                                        </ul>
                                    </div>

                                    <div class="mobile-footer px-20 py-20 border-top-light js-mobile-footer">
                                        <div class="mobile-footer__number">
                                            <div class="text-17 fw-500">اتصل بنا</div>
                                            <div class="text-17 fw-500">800 000 000</div>
                                        </div>
                                        <div class="lh-2 mt-10">
                                            <div>عنوان ما<br />مدينة / دولة</div>
                                            <div>support@example.com</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="header-menu-close" data-el-toggle=".js-mobile-menu-toggle">
                                    <div class="size-40 d-flex items-center justify-center rounded-full bg-white">
                                        <div class="icon-close text-dark-1 text-16"></div>
                                    </div>
                                </div>
                                <div class="header-menu-bg"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-auto">
                        <div class="header-right d-flex items-center">
                            <div class="header-right__icons d-flex items-center">
                                <div class="relative -before-border px-20 sm:px-15">
                                    <button id="language-toggle"
                                            class="language-switcher d-flex items-center text-dark-1 hover:text-purple-1 transition-colors"
                                            type="button">
                                        <i class="fas fa-globe text-16 me-2"></i>
                                        <span id="current-language" class="text-14 fw-500">العربية</span>
                                    </button>
                                </div>
                                <div class="d-none xl:d-block -before-border pl-20 sm:pl-15">
                                    <button class="text-dark-1 items-center" data-el-toggle=".js-mobile-menu-toggle" type="button">
                                        <i class="text-11 icon icon-mobile-menu"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="header-right__buttons d-flex items-center lg:d-none">
                                <a href="~/Auth/Login" class="button -underline text-dark-1 -before-border py-3 pl-30 xl:pl-20">Log in</a>
                                <a href="~/Register/@(ViewBag?.RootCode ?? 0)" class="button h-50 px-25 -purple-3 -rounded text-purple-1 ml-20">Sign up</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <div class="content-wrapper js-content-wrapper">
            <section class="form-page js-mouse-move-container">
                <!-- Decorative side panel -->
                <div class="form-page__img bg-dark-1 d-none d-lg-block">
                    <div class="form-page-composition">
                        <div class="-bg">
                            <img data-move="30" class="js-mouse-move" src="/AWS/img/login/bg.png" alt="bg" /><img src="~/aws/img/login/bg.png" />
                        </div>
                        <div class="-el-1">
                            <img data-move="20" class="js-mouse-move" src="/AWS/img/home-9/hero/bg.png" alt="image" />
                        </div>
                        <div class="-el-2">
                            <img data-move="40" class="js-mouse-move" src="/AWS/img/home-9/hero/1.png" alt="icon" />
                        </div>
                        <div class="-el-3">
                            <img data-move="40" class="js-mouse-move" src="/AWS/img/home-9/hero/2.png" alt="icon" />
                        </div>
                        <div class="-el-4">
                            <img data-move="40" class="js-mouse-move" src="/AWS/img/home-9/hero/3.png" alt="icon" />
                        </div>
                    </div>
                </div>

                <div class="form-page__content lg:py-50">
                    <div class="container">
                        <div class="row justify-center items-center">
                            <div class="col-xl-6 col-lg-8">
                                <div class="px-50 py-50 md:px-25 md:py-25 bg-white shadow-1 rounded-16">
                                    <h3 class="text-30 lh-13">تسجيل الدخول إلى دروسك</h3>
                                    <p class="mt-10">
                                        الوصول إلى الدروس والواجبات والامتحانات. ليس لديك حساب؟
                                        <a href="~/Register/@(ViewBag?.RootCode ?? 0)" class="text-purple-1">سجل مجاناً</a>
                                    </p>

                                    <!-- Login Form -->
                                    <form id="studentLoginForm" method="post" autocomplete="off" class="contact-form respondForm__form row y-gap-20 pt-30">
                                        @Html.AntiForgeryToken()

                                        <div class="col-12">
                                            <label for="Username" class="text-16 lh-1 fw-500 text-dark-1 mb-10">Username</label>
                                            <input id="Username"
                                                   name="username"
                                                   class="form-control"
                                                   maxlength="50"
                                                   required
                                                   placeholder="Enter your username"
                                                   autocomplete="username" />
                                        </div>

                                        <div class="col-12">
                                            <label for="Password" class="text-16 lh-1 fw-500 text-dark-1 mb-10">Password</label>
                                            <div class="password-container">
                                                <input id="Password"
                                                       name="password"
                                                       type="password"
                                                       class="form-control"
                                                       maxlength="100"
                                                       required
                                                       placeholder="Enter your password"
                                                       autocomplete="current-password" />
                                                <button type="button"
                                                        id="toggleStudentPwd"
                                                        class="password-toggle"
                                                        aria-label="Toggle password visibility">
                                                    Show
                                                </button>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <button id="btnStudentLogin"
                                                    class="button -md -green-1 text-dark-1 fw-500 w-1/1 btn-login"
                                                    type="submit">
                                                <span class="login-text">Sign In</span>
                                            </button>
                                        </div>

                                        <div class="col-12">
                                            <div id="studentLoginStatus" class="student-login-status"></div>
                                        </div>

                                        <div class="col-12 text-center">
                                            <p class="auth-switch mt-20">
                                                Don’t have an account?
                                                <a href="~/Register/@(ViewBag?.RootCode ?? 0)" class="auth-link">Sign up</a>
                                            </p>
                                        </div>
                                    </form>
                                    <!-- /Login Form -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- JS (updated to /AWS/ paths) -->
    <script src="/AWS/js/vendors.js"></script>
    <script src="/AWS/js/main.js"></script>
    <script src="/AWS/js/language-switcher.js"></script>
    <!-- Move or copy your login logic file into /AWS/js/ then use the line below -->
    <script src="/js/StudentLogin.js"></script>

    <script>
        window.addEventListener('load', function () {
            document.querySelector('.preloader')?.remove();
            document.body.classList.remove('preloader-visible');
        });

        (function () {
            const toggleBtn = document.getElementById('toggleStudentPwd');
            const pwd = document.getElementById('Password');
            if (toggleBtn && pwd) {
                toggleBtn.addEventListener('click', function () {
                    if (pwd.type === 'password') {
                        pwd.type = 'text';
                        this.textContent = 'Hide';
                        this.setAttribute('aria-label', 'Hide password');
                    } else {
                        pwd.type = 'password';
                        this.textContent = 'Show';
                        this.setAttribute('aria-label', 'Show password');
                    }
                });
            }
        })();

        document.getElementById('studentLoginForm')?.addEventListener('submit', function () {
            const submitButton = document.getElementById('btnStudentLogin');
            const loginText = submitButton.querySelector('.login-text');
            submitButton.disabled = true;
            loginText.innerHTML = '<span class="loading-spinner"></span>Signing In...';
            // Safety fallback if AJAX script fails to re-enable:
            setTimeout(() => {
                if (submitButton.disabled) {
                    submitButton.disabled = false;
                    loginText.textContent = 'Sign In';
                }
            }, 8000);
        });

        window.showLoginStatus = function (message, isError = true) {
            const statusDiv = document.getElementById('studentLoginStatus');
            if (!statusDiv) return;
            statusDiv.textContent = message;
            statusDiv.className = 'student-login-status ' + (isError ? 'error' : 'success');
            statusDiv.style.display = 'block';
            statusDiv.style.opacity = '0';
            setTimeout(() => {
                statusDiv.style.transition = 'opacity 0.3s ease';
                statusDiv.style.opacity = '1';
            }, 10);
        };
    </script>
</body>
</html>