@using Microsoft.AspNetCore.Localization

@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.Culture ?? new System.Globalization.CultureInfo("en-US");
    var isRTL = currentCulture.Name == "ar-EG";
}

<!DOCTYPE html>
<html lang="@currentCulture.Name" dir="@(isRTL ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - centrny</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/centrny.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Poppins Bold for sidebar -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-bg: linear-gradient(135deg, #1e3a8a 0%, #3730a3 50%, #581c87 100%);
            --sidebar-text: #e2e8f0;
            --sidebar-hover: rgba(255,255,255,0.10);
            --sidebar-active: rgba(255,255,255,0.15);
            --header-height: 64px;
            --transition-speed: 0.3s;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            background: #f8fafc;
        }

        .modern-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            z-index: 1040;
            display: flex;
            flex-direction: column;
            transform: translateX(-100%);
            transition: transform var(--transition-speed) cubic-bezier(0.4,0,0.2,1);
            box-shadow: 4px 0 24px rgba(0,0,0,0.08);
            will-change: transform;
            border-radius: 0;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

            .modern-sidebar.open {
                transform: translateX(0);
            }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.3);
            z-index: 1039;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.2s;
        }

            .sidebar-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.2rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            font-weight: 700;
        }

            .sidebar-brand .fa-graduation-cap {
                color: #fbbf24;
                font-size: 1.7rem;
            }

        .brand-text {
            font-size: 1.3rem;
            font-weight: 700;
            color: #fff;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            letter-spacing: 0.03em;
        }

        .sidebar-toggle-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 1.3rem;
            padding: 0.3rem 0.5rem;
            cursor: pointer;
            border-radius: 6px;
            transition: background 0.2s;
        }

            .sidebar-toggle-btn:hover {
                background: var(--sidebar-hover);
            }

        .sidebar-user-profile {
            display: flex;
            align-items: center;
            gap: 0.9rem;
            padding: 1.2rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            background: rgba(255,255,255,0.03);
            border-radius: 0;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        .user-avatar {
            background: #fbbf24;
            color: #fff;
            font-size: 1.6rem;
            width: 46px;
            height: 46px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 10px rgba(251,191,36,0.12);
        }

        .user-info {
            flex: 1;
            min-width: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            border-left: 0px solid var(--primary-color);
            border-right: 0px solid var(--border-color);
            border-bottom: 0px solid var(--border-color);
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        .user-name {
            font-size: 1.07rem;
            font-weight: 700;
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            letter-spacing: 0.01em;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        .user-role {
            font-size: 0.86rem;
            color: #ffe082;
            margin-top: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-weight: 700;
            letter-spacing: 0.01em;
            opacity: 0.95;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        .sidebar-user-profile:hover {
            background: rgba(255,255,255,0.07);
            box-shadow: 0 2px 8px rgba(30,58,138,0.10);
            cursor: pointer;
            transition: background 0.2s, box-shadow 0.2s;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
        }

        .nav-list {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-item {
            margin: 0.3rem 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.9rem;
            padding: 1.05rem 1.6rem;
            color: var(--sidebar-text);
            text-decoration: none;
            border-radius: 0 20px 20px 0;
            margin-right: 1rem;
            transition: background 0.18s, color 0.18s, transform 0.18s;
            position: relative;
            font-weight: 700;
            font-size: 1.12rem;
            min-height: 52px;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            letter-spacing: 0.015em;
        }

            .nav-link:hover, .nav-link.active {
                background: var(--sidebar-hover);
                color: #fff;
                transform: translateX(5px);
            }

        .nav-icon {
            font-size: 1.13rem;
            min-width: 22px;
            text-align: center;
        }

        .nav-text {
            white-space: nowrap;
        }

        .sidebar-footer {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.08);
        }

        .logout-link {
            color: #fca5a5 !important;
        }

            .logout-link:hover {
                background: rgba(251,113,133,0.08) !important;
                color: #fee2e2 !important;
            }

        .main-wrapper {
            min-height: 100vh;
            transition: margin-left 0.3s;
            margin-left: 0;
        }

        .top-header {
            height: var(--header-height);
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 101;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .menu-toggle-btn {
            background: none;
            border: none;
            font-size: 1.25rem;
            color: #6b7280;
            padding: 0.4rem 0.7rem;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.18s;
        }

            .menu-toggle-btn:hover {
                background: #f3f4f6;
                color: #3730a3;
            }

        .page-title {
            font-size: 1.15rem;
            font-weight: 600;
            color: #18181b;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .main-content {
            flex: 1;
            padding: 2rem 1.7rem;
            background: #f8fafc;
        }
        /* Gradient section header for admin/user info */
        .gradient-section-header {
            background: linear-gradient(90deg, #7b61ff 0%, #5e60ce 100%);
            color: #fff;
            font-size: 1.45rem;
            font-weight: 700;
            padding: 1.2rem 2rem;
            border-radius: 16px 16px 0 0;
            box-shadow: 0 4px 16px 0 rgba(123,97,255,0.06);
            letter-spacing: 0.01em;
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        @@media (max-width: 992px) {
            .modern-sidebar {
                width: var(--sidebar-width);
                transform: translateX(-100%);
            }

                .modern-sidebar.open {
                    transform: translateX(0);
                }

            .main-wrapper {
                margin-left: 0 !important;
            }

            .sidebar-overlay {
                display: block;
            }
        }

        @@media (min-width: 993px) {
            .modern-sidebar {
                transform: translateX(-100%);
            }

                .modern-sidebar.open {
                    transform: translateX(0);
                }

            .main-wrapper {
                margin-left: 0;
            }

            .modern-sidebar.open ~ .main-wrapper {
                margin-left: var(--sidebar-width);
            }

            .sidebar-overlay {
                display: none !important;
            }
        }

        @@media (max-width: 576px) {
            .main-content {
                padding: 1rem 0.5rem;
            }

            .top-header {
                padding: 0 0.5rem;
            }
        }

        ::-webkit-scrollbar {
            width: 7px;
            background: #e0e7ef;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c8d6;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar(false)"></div>
    <nav class="modern-sidebar" id="modernSidebar">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <i class="fas fa-graduation-cap"></i>
                <span class="brand-text">Centrny</span>
            </div>
            <button class="sidebar-toggle-btn" type="button" onclick="toggleSidebar(false)">
                <i class="fas fa-times"></i>
            </button>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar-user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-info">
                    <div class="user-name">
                        @User.FindFirst("FullName")?.Value ?? @User.Identity.Name
                    </div>
                    <div class="user-role">
                        @User.FindFirst("GroupName")?.Value ?? "User"
                    </div>
                </div>
            </div>
        }
        <div class="sidebar-nav">
            <div class="sidebar-nav">
                <ul class="nav-list">
                    <li>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home nav-icon"></i> <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Root" asp-action="Index">
                            <i class="fas fa-sitemap nav-icon"></i> <span class="nav-text">Roots</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Group" asp-action="Index">
                            <i class="fas fa-users nav-icon"></i> <span class="nav-text">Groups</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <i class="fas fa-user nav-icon"></i> <span class="nav-text">Users</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="EduYear" asp-action="Index">
                            <i class="fas fa-calendar-alt nav-icon"></i> <span class="nav-text">Edu Years & Years</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Level" asp-action="Index">
                            <i class="fas fa-layer-group nav-icon"></i> <span class="nav-text">Levels</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Subject" asp-action="Index">
                            <i class="fas fa-book nav-icon"></i> <span class="nav-text">Subjects</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Student" asp-action="Index">
                            <i class="fas fa-user-graduate nav-icon"></i> <span class="nav-text">Students</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Year" asp-action="Index">
                            <i class="fas fa-calendar nav-icon"></i> <span class="nav-text">Years</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Teacher" asp-action="Index">
                            <i class="fas fa-user-tie nav-icon"></i> <span class="nav-text">Teachers</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Exam" asp-action="Index">
                            <i class="fas fa-file-alt nav-icon"></i> <span class="nav-text">Exams</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Schedule" asp-action="Index">
                            <i class="fas fa-clock nav-icon"></i> <span class="nav-text">Schedules</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Reservation" asp-action="Index">
                            <i class="fas fa-calendar-check nav-icon"></i> <span class="nav-text">Reservations</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="TeacherManagement" asp-action="Index">
                            <i class="fas fa-cogs nav-icon"></i> <span class="nav-text">Teacher Management</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Item" asp-action="Index">
                            <i class="fas fa-boxes nav-icon"></i> <span class="nav-text">Items</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Security" asp-action="Index">
                            <i class="fas fa-shield-alt nav-icon"></i> <span class="nav-text">Security</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="DailyClass" asp-action="Index">
                            <i class="fas fa-chalkboard nav-icon"></i> <span class="nav-text">Classes</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="TeacherClass" asp-action="Teacher">
                            <i class="fas fa-user-tie nav-icon"></i> <span class="nav-text">Teacher Schedule</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Question" asp-action="Index">
                            <i class="fas fa-question-circle nav-icon"></i> <span class="nav-text">Questions</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="StudentExam" asp-action="Index">
                            <i class="fas fa-user-graduate nav-icon"></i> <span class="nav-text">Student Exam</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="ViewAuthority" asp-action="Index">
                            <i class="fas fa-users-cog nav-icon"></i> <span class="nav-text">Page Permissions</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="sidebar-footer">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link logout-link" href="#" onclick="document.getElementById('logoutForm').submit();">
                    <i class="fas fa-sign-out-alt nav-icon"></i>
                    <span class="nav-text">Logout</span>
                </a>
            }
            else
            {
                <a class="nav-link" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-sign-in-alt nav-icon"></i>
                    <span class="nav-text">Login</span>
                </a>
            }
        </div>
    </nav>
    <div class="main-wrapper" id="mainWrapper">
        <header class="top-header">
            <div class="header-left">
                <button class="menu-toggle-btn" onclick="toggleSidebar(true)">
                    <i class="fas fa-bars"></i>
                </button>
                <span class="page-title">@ViewData["Title"]</span>
            </div>
            <div class="header-right">
                @await Html.PartialAsync("_LanguageSwitcher")
            </div>
        </header>
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <form id="logoutForm" method="post" asp-controller="Login" asp-action="Logout" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/i18n.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar(open) {
            const sidebar = document.getElementById('modernSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            if (open) {
                sidebar.classList.add('open');
                overlay.classList.add('active');
            } else {
                sidebar.classList.remove('open');
                overlay.classList.remove('active');
            }
        }
        // Wait for DOMContentLoaded to avoid null refs
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.modern-sidebar .nav-link').forEach(link => {
                link.addEventListener('click', () => toggleSidebar(false));
            });
        });
        document.addEventListener('keydown', function(e) {
            if (e.key === "Escape") {
                toggleSidebar(false);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>