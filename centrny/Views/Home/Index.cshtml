    // Build Register URL with correct root code
    var rootCode = ViewBag.root_code?.ToString();
    var generatedRegisterUrl = Url.Action("Register", "Student", new { root_code = rootCode });
    if (string.IsNullOrWhiteSpace(generatedRegisterUrl))
    {
        generatedRegisterUrl = !string.IsNullOrEmpty(rootCode) ? $"/studentregister?root_code={rootCode}" : "/studentregister";
    }
    var registerUrl = generatedRegisterUrl;
}
