@{
    ViewData["Title"] = "Quick Video Security Test";
    dynamic result = ViewBag.Model ?? Model;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-shield-alt"></i> Quick Video Security Test Results
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (result?.success == true)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> Secure link generated successfully!
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <h5>🔓 Original YouTube URL:</h5>
                                    <div class="bg-danger bg-opacity-10 p-3 rounded mb-3">
                                        <code class="text-danger">@result.data.youtubeUrl</code>
                                        <br><small class="text-danger">⚠️ Insecure - can be shared easily</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5>🔒 Secure Proxy URL:</h5>
                                    <div class="bg-success bg-opacity-10 p-3 rounded mb-3">
                                        <code class="text-success" style="word-break: break-all;">@result.data.secureProxyUrl</code>
                                        <br><small class="text-success">✅ Encrypted & time-limited</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-4">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <i class="fas fa-user-check fa-2x text-primary mb-2"></i>
                                            <h6>Student</h6>
                                            <p class="mb-0">@result.data.studentName</p>
                                            <small class="text-muted">@result.data.branchName</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                            <h6>Expires In</h6>
                                            <p class="mb-0">@result.data.expiresIn</p>
                                            <small class="text-muted">@DateTime.Parse(result.data.expiresAt.ToString()).ToString("MM/dd HH:mm")</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <i class="fas fa-video fa-2x text-success mb-2"></i>
                                            <h6>Video ID</h6>
                                            <p class="mb-0">@result.data.originalVideoId</p>
                                            <small class="text-muted">YouTube Video</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a href="@result.data.secureProxyUrl" target="_blank" class="btn btn-success">
                                    <i class="fas fa-play"></i> Test Secure Player
                                </a>
                                <button class="btn btn-primary" onclick="copyToClipboard('@result.data.secureProxyUrl')">
                                    <i class="fas fa-copy"></i> Copy Secure URL
                                </button>
                                <a href="@Url.Action("Index", "VideoSecurity")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Test Interface
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i> Failed to generate secure link
                                <br><strong>Error:</strong> @(result?.message ?? "Unknown error")
                            </div>

                            <div class="text-center">
                                <a href="@Url.Action("TestDatabase", "VideoSecurity")" class="btn btn-info">
                                    <i class="fas fa-database"></i> Test Database Connection
                                </a>
                                <a href="@Url.Action("TestToken", "VideoSecurity")" class="btn btn-warning">
                                    <i class="fas fa-key"></i> Test Token Generation
                                </a>
                                <a href="@Url.Action("Index", "VideoSecurity")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Test Interface
                                </a>
                            </div>
                        }

                        <!-- Test Links Section -->
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-12">
                                <h5><i class="fas fa-link"></i> Quick Test Links</h5>
                                <div class="btn-group-vertical w-100" role="group">
                                    <a href="@Url.Action("QuickTest", "VideoSecurity", new { videoId = "dQw4w9WgXcQ" })" 
                                       class="btn btn-outline-primary">
                                        🎵 Test with Rick Roll (dQw4w9WgXcQ)
                                    </a>
                                    <a href="@Url.Action("QuickTest", "VideoSecurity", new { videoId = "9bZkp7q19f0" })" 
                                       class="btn btn-outline-primary">
                                        💃 Test with Gangnam Style (9bZkp7q19f0)
                                    </a>
                                    <a href="@Url.Action("TestDatabase", "VideoSecurity")" 
                                       class="btn btn-outline-info">
                                        🗄️ Check Database Status
                                    </a>
                                    <a href="@Url.Action("TestToken", "VideoSecurity")" 
                                       class="btn btn-outline-warning">
                                        🔑 Test Token Generation
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Secure URL copied to clipboard!');
            }, function(err) {
                console.error('Could not copy text: ', err);
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('Secure URL copied to clipboard!');
            });
        }
    </script>
</body>
</html>