@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fas fa-ban me-2"></i>Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt fa-5x text-danger"></i>
                    </div>
                    <h5>@ViewBag.Message</h5>
                    <p class="text-muted">You don't have the required permissions to view this page.</p>

                    <div class="mt-4">
                        @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                        {
                            <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Go Back
                            </a>
                        }
                        <a href="@Url.Action("Index", "DailyClass")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go Home
                        </a>
                        <a href="@Url.Action("Index", "Login")" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>