            // ======================== SCHEDULES RENDERING ========================
            function renderSchedules(schedules) {
                const container = document.getElementById('scheduleSelection');
                container.innerHTML = ''; // Clear previous

                if (!schedules || schedules.length === 0) {
                    container.innerHTML = `<div class="alert alert-danger">${translations[currentLanguage]['select_schedules']}</div>`;
                    return;
                }

                schedules.forEach(schedule => {
                    container.innerHTML += `
                        <div class="schedule-card">
                            <div class="schedule-item">
                                <div class="schedule-title">
                                    ${schedule.SubjectName || ''} - ${schedule.TeacherName || ''}
                                </div>
                                <div class="schedule-details">
                                    ${schedule.DayName || schedule.DayTime || ''}
                                    ${schedule.StartTime ? " " + schedule.StartTime : ""}
                                    ${schedule.EndTime ? " - " + schedule.EndTime : ""}
                                    ${schedule.HallName ? " | " + schedule.HallName : (schedule.Location ? " | " + schedule.Location : "")}
                                </div>
                            </div>
                        </div>
                    `;
                });
            }

            function fetchAndRenderSchedules(subjectCode, teacherCode, branchCode, yearCode) {
                fetch(`/Student/GetSchedulesForSubjectTeacher?subjectCode=${subjectCode}&teacherCode=${teacherCode}&branchCode=${branchCode}${yearCode ? `&yearCode=${yearCode}` : ''}`)
                    .then(response => response.json())
                    .then(data => {
                        renderSchedules(data);
                    })
                    .catch(() => {
                        document.getElementById('scheduleSelection').innerHTML =
                            `<div class="alert alert-danger">${translations[currentLanguage]['network_error']}</div>`;
                    });
            }

