            // Block form submission
            document.getElementById('registrationForm').addEventListener('submit', function (e) {
                if (studentPhoneExists) {
                    Swal.fire({
                        icon: 'error',
                        title: translations[currentLanguage]['student_already_registered'],
                        text: translations[currentLanguage]['student_already_registered'],
                        confirmButtonText: 'OK'
                    });
