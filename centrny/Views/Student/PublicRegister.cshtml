@using centrny.Controllers
@using centrny.Resources
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@model PublicRegistrationViewModel
@inject IStringLocalizer<SharedResources> Localizer
@inject SharedResources SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer.StudentRegistration;
    Layout = null; // No layout for clean registration experience
    
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.Culture ?? new System.Globalization.CultureInfo("en-US");
    var isRTL = currentCulture.Name == "ar-EG";
}

<!DOCTYPE html>
<html lang="@currentCulture.Name" dir="@(isRTL ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Model.RootName</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* RTL Support */
        html[dir="rtl"] body {
            font-family: 'Segoe UI', 'Tahoma', 'Arial', sans-serif;
        }

        html[dir="rtl"] .text-start {
            text-align: right !important;
        }

        html[dir="rtl"] .text-end {
            text-align: left !important;
        }

        html[dir="rtl"] .me-1, html[dir="rtl"] .me-2, html[dir="rtl"] .me-3 {
            margin-right: 0 !important;
            margin-left: 0.25rem !important;
        }

        html[dir="rtl"] .btn i {
            margin-left: 0.5rem;
            margin-right: 0;
        }

        .registration-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .registration-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 600px;
            width: 100%;
        }

        .registration-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
            padding: 40px 30px;
        }

        .registration-header h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: 600;
        }

        .registration-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .registration-body {
            padding: 40px 30px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .instructions {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .instructions h5 {
            color: #667eea;
            margin-bottom: 15px;
        }

        .instructions ul {
            margin: 0;
            padding-left: 20px;
        }

        .instructions li {
            margin-bottom: 8px;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="registration-container">
        <div class="registration-card">
            <!-- Header -->
            <div class="registration-header">
                <i class="fas fa-user-plus fa-3x mb-3"></i>
                <h1>@SharedLocalizer["Join"] @Model.RootName</h1>
                <p>@SharedLocalizer["Start your learning journey with us"]</p>
            </div>

            <!-- Body -->
            <div class="registration-body">
                <!-- Instructions -->
                <div class="instructions">
                    <h5><i class="fas fa-info-circle me-2"></i>Registration Process</h5>
                    <ul>
                        <li>Complete this form with your basic information</li>
                        <li>You'll receive your access key from the center</li>
                        <li>Use your access key to complete academic enrollment</li>
                        <li>Select your subjects, teachers, and schedules</li>
                    </ul>
                </div>

                <!-- Validation Errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Registration Form -->
                <form method="post" asp-action="PublicRegister" asp-route-root_code="@Model.RootCode">
                    
                    <!-- Student Name -->
                    <div class="mb-3">
                        <label class="form-label" for="studentName">
                            Full Name <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="studentName" name="StudentName" 
                               value="@ViewBag.StudentName" required maxlength="100" 
                               placeholder="Enter your full name">
                        @Html.ValidationMessage("StudentName", "", new { @class = "text-danger" })
                    </div>

                    <!-- Contact Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="studentPhone">
                                    Your Phone Number <span class="text-danger">*</span>
                                </label>
                                <input type="tel" class="form-control" id="studentPhone" name="StudentPhone" 
                                       value="@ViewBag.StudentPhone" required maxlength="20"
                                       placeholder="Your phone number">
                                @Html.ValidationMessage("StudentPhone", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="parentPhone">
                                    Parent/Guardian Phone <span class="text-danger">*</span>
                                </label>
                                <input type="tel" class="form-control" id="parentPhone" name="StudentParentPhone" 
                                       value="@ViewBag.StudentParentPhone" required maxlength="20"
                                       placeholder="Parent/Guardian phone">
                                @Html.ValidationMessage("StudentParentPhone", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <!-- Birth Date and Gender -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="birthDate">
                                    Date of Birth <span class="text-danger">*</span>
                                </label>
                                <input type="date" class="form-control" id="birthDate" name="BirthDate" 
                                       value="@ViewBag.BirthDate" required>
                                @Html.ValidationMessage("BirthDate", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Gender</label>
                                <div class="d-flex gap-3 mt-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="genderMale" value="true"
                                               @(ViewBag.Gender?.ToString() == "True" ? "checked" : "")>
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="genderFemale" value="false"
                                               @(ViewBag.Gender?.ToString() == "False" ? "checked" : "")>
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Academic Information -->
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label" for="yearCode">
                                    Academic Year/Level <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="yearCode" name="YearCode" required>
                                    <option value="">Select your year/level</option>
                                    @foreach (var year in Model.AvailableYears)
                                    {
                                        <option value="@year.Value" selected="@(ViewBag.YearCode?.ToString() == year.Value ? "selected" : null)">
                                            @year.Text
                                        </option>
                                    }
                                </select>
                                @Html.ValidationMessage("YearCode", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Complete Registration
                        </button>
                    </div>

                    <!-- Additional Information -->
                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>
                            @SharedLocalizer.SecureInformation
                        </small>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Language Switcher for standalone page -->
        <div style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
            @{
                var returnUrl = Context.Request.Path + Context.Request.QueryString;
            }
            <div class="language-switcher">
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe me-1"></i>
                        @if (currentCulture.Name == "ar-EG")
                        {
                            <span>العربية</span>
                        }
                        else
                        {
                            <span>English</span>
                        }
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item @(currentCulture.Name == "en-US" ? "active" : "")" 
                               href="@Url.Action("SetLanguage", "Home", new { culture = "en-US", returnUrl = returnUrl })">
                                English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item @(currentCulture.Name == "ar-EG" ? "active" : "")"
                               href="@Url.Action("SetLanguage", "Home", new { culture = "ar-EG", returnUrl = returnUrl })">
                                العربية
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>